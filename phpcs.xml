<?xml version="1.0"?>

<ruleset name="Custom PSR12">
  <description>A custom coding PSR12</description>

  <!-- チェック対象のディレクトリ -->
  <file>./</file>

  <!-- チェック対象から除外するディレクトリ -->
  <exclude-pattern>.vendor/*</exclude-pattern>

  <!-- カラーを付ける設定 -->
  <arg name="colors"/>

  <!-- 違反したコーディング規約が記載されるオプションsをつける -->
  <arg value="s"/>

  <!-- PSR12のルールを適用する -->
  <rule ref="PSR12"/>
</ruleset>